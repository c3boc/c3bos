<div class="col-md-6">
  <h2>Current Stock</h2>
  <table class="table table-striped">
    <tr>
      <th>Beverage</th>
      <th>Crates in Stock</th>
      <th>Actions</th>
    </tr>
    <% @beverages.each do |beverage| %>
      <tr>
        <td><%= beverage["name"] %></td>
        <td><%= beverage["in_storage"] %></td>
        <td><%= link_to "Delete", beverage_path(beverage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </table>
</div>
<div class="col-md-6">
  <h2>New Beverage</h2>
  <%= form_for @beverage, :html => {:class => "form-horizontal"} do |f| %>
    <% if @beverage.errors.any? %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <ul>
           <% @beverage.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
           <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name, :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :in_storage, :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :in_storage, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>

    <p class="button"></p>
  <% end %>
</div>


<div class="col-md-6">
  <h2>New Delivery</h2>
  <%= form_tag({ controller: "beverages", action: "deliver" }, { class: "form-horizontal" }) do %>
    <% if @beverage.errors.any? %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <ul>
           <% @beverage.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
           <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= label_tag :beverage_id, "Beverage", :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= select_tag :beverage_id, options_from_collection_for_select(@beverages, "id", "name") , :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :amount, "Amount", :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= text_field_tag :amount, nil, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag "Deliver", :class => "btn btn-primary" %>
      </div>
    </div>

    <p class="button"></p>
  <% end %>
</div>
