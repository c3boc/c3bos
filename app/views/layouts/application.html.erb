<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>C3 BOS</title>
  <%= stylesheet_link_tag 'application' %>
  <%= favicon_link_tag 'favicon.ico', skip_pipeline: true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <%= link_to 'C3BOC', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Dashboard", root_path, class: 'nav-link' %>
        </li>
        <% if user? %>
          <li class="nav-item">
            <%= link_to "Orders", orders_path, class: 'nav-link' %>
          </li>
        <% end %>
        <% if admin? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Admin
          </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Users", users_path, class: 'dropdown-item' %></li>
              <li><%= link_to "Beverages", beverages_path, class: 'dropdown-item' %></li>
              <li><%= link_to "Order Permissions", order_permissions_path, class: 'dropdown-item' %></li>
              <li><%= link_to "Statistics", stats_path, class: 'dropdown-item' %></li>
            </ul>
          </li>
        <% end %>
      </ul>

      <% if current_user %>
        <span class="navbar-text"> Hello, <%= current_user.username %>! (<%= link_to "Logout", log_out_path %>)</span>
      <% else %>
        <ul class="navbar-nav" >
          <li class="nav-item">
            <%= link_to 'Login', log_in_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Signup', sign_up_path, class: 'nav-link' %>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>


  <div class="container">
    <div class="row">
      <% flash.each do |f| %>
      <div class="alert alert-<%= f[0] %>">
        <%= f[1] %>
      </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
  <%= javascript_include_tag 'application' %>
</body>
</html>
