<h1>Login</h1>
<%= form_tag sessions_path, :class => "form-horizontal" do |f| %>
  <div class="form-group">
    <%= label_tag :username, nil, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :username, nil, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag nil, :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
