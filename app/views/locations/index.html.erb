<div class="col-md-6">
  <h2>Locations</h2>
  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Room</th>
      <th>Actions</th>
    </tr>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location["title"] %></td>
        <td><%= location["room"] %></td>
        <td>Edit, <%= link_to "Delete", location_path(location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </table>
</div>
<div class="col-md-6">
  <h2>New Location</h2>
  <%= form_for @location, :html => {:class => "form-horizontal"} do |f| %>
    <% if @location.errors.any? %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <ul>
           <% @location.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
           <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :title, :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :title, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :room, :class => "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :room, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>

    <p class="button"></p>
  <% end %>
</div>
